<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/md"
    android:layout_gravity="center_horizontal"
    android:layout_centerInParent="true"
    tools:context=".crud.UploadProduk">


    <ImageView
        android:id="@+id/imageQR"
        android:layout_width="@dimen/imgL"
        android:layout_height="@dimen/imgL"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:background="@drawable/blue_border"
        android:drawableStart="@drawable/icon_key"
        android:drawablePadding="@dimen/xs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imgXS"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/editKode"
        android:hint="Kode Produk"/>


    <EditText
        android:background="@drawable/blue_border"
        android:drawableStart="@drawable/icon_name"
        android:drawablePadding="@dimen/xs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imgXS"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/editUploadNama"
        android:hint="Nama Produk"/>

    <EditText

        android:drawableStart="@drawable/icon_number"
        android:drawablePadding="@dimen/xs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imgXS"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/editJumlahPoduk"
        android:hint="Jumlah Produk"/>

    <EditText

        android:drawableStart="@drawable/icon_price"
        android:drawablePadding="@dimen/xs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imgXS"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/editHarga"
        android:hint="Harga"/>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button

            android:layout_marginHorizontal="10dp"
            android:id="@+id/btnQR"
            android:layout_width="@dimen/imgL"
            android:layout_height="wrap_content"
            android:text="QR CODE" />

        <Button
            android:layout_marginHorizontal="10dp"
            android:id="@+id/btnSimpan"
            android:layout_width="@dimen/imgL"
            android:layout_height="wrap_content"
            android:text="SIMPAN" />
    </LinearLayout>



</LinearLayout>